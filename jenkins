pipeline {
  agent none

  triggers {
    // 5분마다 SCM 폴링
    pollSCM('H/5 * * * *')
  }

  stages {
    stage('Checkout') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        git branch: 'main', url: 'https://github.com/js24z-p8k/source-maven-java-spring-hello-webapp.git'
      }
    }

    stage('Build'){
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Image Build') {
      agent {
        label 'controller'
      }
      steps {
        sh 'docker image build -t tomcat:hello .'
      }
    }

    stage('Deploy') {
      agent {
        label 'controller'
      }
      steps {
        ansiblePlaybook(playbook: 'docker-ansible.yaml')
      }
    }
  }
}
